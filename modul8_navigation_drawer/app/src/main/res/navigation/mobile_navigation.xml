    <fragment
        android:id="@+id/nav_inbox"
        android:name="com.example.modul8_navigation_drawer.ui.inbox.InboxFragment"
        android:label="@string/menu_inbox"
        tools:layout="@layout/fragment_inbox" />

    <activity
        android:id="@+id/nav_unread"
        android:name="com.example.modul8_navigation_drawer.UnreadActivity"
