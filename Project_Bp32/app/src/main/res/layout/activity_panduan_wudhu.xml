<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2"
    tools:context=".PanduanWudhuActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:id="@+id/panduan_wudhu_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/panduanwudhu"
                android:layout_marginBottom="16dp"/>

            <ImageView
                android:id="@+id/pengertian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/pengertian"
                android:layout_marginBottom="16dp"/>

            <ImageView
                android:id="@+id/batal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/batal"
                android:layout_marginBottom="16dp"/>

            <ImageView
                android:id="@+id/air"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/air"
                android:layout_marginBottom="16dp"/>

            <ImageView
                android:id="@+id/wajib"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/wajib"
                android:layout_marginBottom="16dp"/>

            <ImageView
                android:id="@+id/amalan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/amalan"/>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>